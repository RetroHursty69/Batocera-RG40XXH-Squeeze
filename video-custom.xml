<theme>
   <formatVersion>7</formatVersion>

<view name="system">
        <video name="backgroundvideo" extra="static">
         <origin>0 0</origin>
         <pos>0.2281 0.177</pos>
         <size>0.543 0.543</size>          
         <zIndex>20</zIndex>       
        <path>./_inc/videos/${system.theme}.mp4</path>
        <visible>true</visible>
        <rotation>0</rotation>
        <roundCorners>0.00</roundCorners>
        <color>FFFFFF</color>
			<storyboard>
				<animation property="opacity" from="1" to="0" begin="50" duration="50" mode="Linear"/>			
				<animation property="opacity" from="0" to="1" begin="2300" duration="500" mode="Linear"/>
			</storyboard>           
        </video>

       <image name="videoshade" extra="true">
         <origin>0 0</origin>
	     <path>./_inc/images/videoshade.png</path>       
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>
         <storyboard>
            <animation property="opacity" to="0" begin="50" duration="50" mode="EaseIn"/>
			<animation property="opacity" to="1" begin="2000" duration="500" mode="EaseIn"/>
		 </storyboard>		 
      </image>        
  
       <image name="logovideooff" extra="true">
         <storyboard>
            <animation property="opacity" to="0" begin="1" duration="1" mode="EaseIn"/>
		 </storyboard>	        	     
       </image>  
        
</view>
</theme>
